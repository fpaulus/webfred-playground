const numberOfLatestPostsToShow = 3;
---

<h1 id="frederik-paulus-works-in-policy-analysis-writes-on-economics-privacy-and-technology-plays-around-with-data-and-occasionally-takes-photos"><a href="about/">Frederik Paulus</a> works in financial services and policy analysis, <a href="essays/">writes</a> on economics, privacy and technology, <a href="https://github.com/fpaulus">plays</a> around with data, and occasionally takes photos.</h1>


<div class="newsletter-container">
		<h3>Subscribe to my newsletter Surveilled</h3>
		<p>Get the newest posts about economics, privacy, and technology straight to your inbox.</p>

		<iframe
				scrolling="no"
				style="
						width: 100% !important;
						height: 160px;
						border: 1px #ccc solid !important;
				"
				src="https://buttondown.com/fpaulus?as_embed=true"
		></iframe>

		<p class="newsletter-footer">
				✓ No spam, unsubscribe anytime
				<br>
				✓ Published monthly, mostly
		</p>
</div>


{% set postsCount = collections.posts | length %}
{% set latestPostsCount = postsCount | min(numberOfLatestPostsToShow) %}
<h2>Latest {{ latestPostsCount }} Post{% if latestPostsCount != 1 %}s{% endif %}</h2>

{% set postslist = collections.posts | head(-1 * numberOfLatestPostsToShow) %}
{% set postslistCounter = postsCount %}
{% include "postslist.njk" %}

{% set morePosts = postsCount - numberOfLatestPostsToShow %}
{% if morePosts > 0 %}
<p>{{ morePosts }} more post{% if morePosts != 1 %}s{% endif %} can be found in <a href="posts.njk">the archive</a>.</p>
{% endif %}

